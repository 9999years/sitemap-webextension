{
  "name": "Sitemap.xml Search",
  "description" : "To use, type 'sitemap' plus a URL prefix into the search bar.",
  "version": "1.0.0",
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "52.0a1"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "omnibox": { "keyword" : "sitemap" },
  "manifest_version": 2,
  "permissions": [
    "activeTab"
  ]
}
